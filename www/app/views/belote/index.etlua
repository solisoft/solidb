<div class="p-8 max-w-4xl mx-auto text-white">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold">Belote - Lobby</h1>
    <form action="/belote/new" method="POST">
      <button type="submit" class="px-4 py-2 bg-primary rounded-lg hover:bg-primary/80 transition-colors font-medium">
        <i class="fas fa-plus mr-2"></i> New Game
      </button>
    </form>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% for _, game in ipairs(games) do %>
      <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-colors">
        <div class="flex justify-between items-start mb-4">
          <div class="text-lg font-semibold">Game #<%= string.sub(game._key, 1, 6) %></div>
          <div class="px-2 py-1 rounded text-xs font-bold uppercase
            <%= game.status == 'waiting' and 'bg-blue-500/20 text-blue-400' or 
               game.status == 'playing' and 'bg-green-500/20 text-green-400' or 
               'bg-gray-500/20 text-gray-400' %>">
            <%= game.status %>
          </div>
        </div>
        
        <div class="space-y-2 mb-6">
          <div class="text-sm text-text-muted flex justify-between">
            <span>Players:</span>
            <span class="text-white"><%= #game.players %>/4</span>
          </div>
          <div class="text-sm text-text-muted flex justify-between">
            <span>Created:</span>
            <span class="text-white"><%= format_date(game.created_at) %></span>
          </div>
        </div>
        
        <form action="/belote/join/<%= game._key %>" method="POST">
          <button type="submit" class="w-full py-2 bg-white/10 hover:bg-white/20 rounded-lg text-sm font-medium transition-colors"
             <%= #game.players >= 4 and 'disabled' or '' %>>
            <%= #game.players >= 4 and 'Full' or 'Join Game' %>
          </button>
        </form>
      </div>
    <% end %>
    
    <% if #games == 0 then %>
      <div class="col-span-full text-center py-12 text-text-muted">
        <div class="text-4xl mb-4">ğŸƒ</div>
        <p>No games waiting. Create one to start playing!</p>
      </div>
    <% end %>
  </div>
</div>
