<% if editing then %>
  <!-- AI Block Edit Mode -->
  <div class="relative rounded-xl bg-gradient-to-br from-purple-500/5 via-pink-500/5 to-purple-500/5 border border-purple-500/20 overflow-hidden">
    <!-- Animated gradient border effect -->
    <div class="absolute inset-0 bg-gradient-to-r from-purple-500/10 via-pink-500/10 to-purple-500/10 opacity-50"></div>

    <div class="relative p-4 space-y-4">
      <!-- Header -->
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-purple-500/20">
          <i class="fas fa-wand-magic-sparkles text-white text-sm"></i>
        </div>
        <div class="flex-1">
          <div class="text-sm font-semibold text-white">AI Content Generator</div>
          <div class="text-xs text-text-muted">Describe what you want to create</div>
        </div>
        <button onclick="exitEditMode('<%= block.id %>')"
                class="w-7 h-7 rounded-lg hover:bg-white/10 text-text-muted hover:text-white flex items-center justify-center transition-colors">
          <i class="fas fa-times text-xs"></i>
        </button>
      </div>

      <!-- Prompt Input -->
      <div class="relative">
        <textarea id="ai-prompt-<%= block.id %>"
                  placeholder="e.g., Write a tutorial about Lua tables with code examples..."
                  rows="3"
                  class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-sm text-white placeholder-text-muted/40 resize-none focus:outline-none focus:border-purple-500/50 focus:ring-1 focus:ring-purple-500/20 transition-all"><%= block.prompt or '' %></textarea>
      </div>

      <!-- Footer: Provider + Actions -->
      <div class="flex items-center justify-between gap-4">
        <!-- Provider Selection -->
        <div class="flex items-center gap-2">
          <i class="fas fa-robot text-xs text-text-muted"></i>
          <select id="ai-provider-<%= block.id %>"
                  class="bg-black/20 border border-white/10 rounded-lg px-3 py-1.5 text-xs text-white focus:outline-none focus:border-purple-500/50 cursor-pointer hover:bg-black/30 transition-colors">
            <option value="default" <%= (not block.provider or block.provider == 'default') and 'selected' or '' %>>Auto</option>
            <option value="anthropic" <%= block.provider == 'anthropic' and 'selected' or '' %>>Claude</option>
            <option value="openai" <%= block.provider == 'openai' and 'selected' or '' %>>GPT-4</option>
            <option value="gemini" <%= block.provider == 'gemini' and 'selected' or '' %>>Gemini</option>
            <option value="ollama" <%= block.provider == 'ollama' and 'selected' or '' %>>Ollama</option>
          </select>
        </div>

        <!-- Generate Button -->
        <button onclick="generateAIContent('<%= block.id %>')"
                id="ai-generate-btn-<%= block.id %>"
                class="px-5 py-2 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-400 hover:to-pink-400 text-white text-sm font-medium rounded-lg flex items-center gap-2 transition-all shadow-lg shadow-purple-500/25 hover:shadow-purple-500/40 hover:scale-[1.02] active:scale-[0.98]">
          <i class="fas fa-sparkles"></i>
          <span>Generate</span>
        </button>
      </div>

      <!-- Loading State -->
      <div id="ai-loading-<%= block.id %>" class="hidden">
        <div class="flex items-center justify-center gap-3 py-3 bg-black/20 rounded-lg border border-white/5">
          <div class="relative">
            <div class="w-5 h-5 border-2 border-purple-500/30 border-t-purple-500 rounded-full animate-spin"></div>
          </div>
          <span class="text-sm text-purple-300">Generating content...</span>
        </div>
      </div>

      <!-- Error State -->
      <div id="ai-error-<%= block.id %>" class="hidden">
        <div class="flex items-center gap-2 py-2 px-3 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400 text-sm">
          <i class="fas fa-exclamation-circle"></i>
          <span class="error-message"></span>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <!-- AI Block View Mode (Empty State) -->
  <div class="group cursor-pointer rounded-xl bg-gradient-to-br from-purple-500/5 to-pink-500/5 border border-dashed border-purple-500/30 hover:border-purple-500/50 transition-all hover:shadow-lg hover:shadow-purple-500/5">
    <div class="flex items-center gap-4 p-4">
      <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-purple-500/20 group-hover:scale-105 transition-transform">
        <i class="fas fa-wand-magic-sparkles text-white"></i>
      </div>
      <div class="flex-1 min-w-0">
        <div class="text-sm font-medium text-white group-hover:text-purple-300 transition-colors">AI Content Generator</div>
        <div class="text-xs text-text-muted truncate">
          <% if block.prompt and block.prompt ~= '' then %>
            "<%= block.prompt:sub(1, 60) %><%= #block.prompt > 60 and '...' or '' %>"
          <% else %>
            Click to write a prompt and generate content
          <% end %>
        </div>
      </div>
      <div class="text-text-muted group-hover:text-purple-400 transition-colors">
        <i class="fas fa-chevron-right text-xs"></i>
      </div>
    </div>
  </div>
<% end %>
