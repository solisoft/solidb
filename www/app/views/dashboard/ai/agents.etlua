<div class="max-w-6xl mx-auto">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
    <div>
      <h1 class="text-2xl font-bold text-text">AI Agents</h1>
      <p class="text-text-muted text-sm">Configure AI agents for <span class="font-medium text-primary-light"><%= db %></span></p>
    </div>

    <button type="button"
            hx-get="/database/<%= db %>/ai/agents/modal/create"
            hx-target="#modal-container"
            hx-swap="innerHTML"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-light text-white font-medium rounded-lg transition-colors">
      <i class="fas fa-plus"></i>
      <span>Create Agent</span>
    </button>
  </div>

  <!-- Info Banner -->
  <div class="bg-accent/10 border border-accent/30 rounded-xl p-4 mb-6">
    <div class="flex items-start gap-3">
      <i class="fas fa-robot text-accent-light mt-0.5"></i>
      <div>
        <p class="text-sm text-text">AI Agents are autonomous workers that can process tasks, interact with collections, and call external APIs.</p>
        <p class="text-xs text-text-muted mt-1">Each agent can be configured with specific capabilities, rate limits, and access permissions.</p>
      </div>
    </div>
  </div>

  <!-- Agents Grid -->
  <div id="agents-grid"
       hx-get="/database/<%= db %>/ai/agents/grid"
       hx-trigger="load, agentUpdated from:body"
       hx-swap="innerHTML"
       class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <!-- Loading state -->
    <div class="col-span-full p-8 text-center">
      <i class="fas fa-spinner fa-spin text-2xl text-primary-light mb-4"></i>
      <p class="text-text-muted">Loading agents...</p>
    </div>
  </div>

  <!-- Agent Capabilities Reference -->
  <div class="mt-6">
    <h3 class="text-sm font-medium text-text-muted mb-3">Available Capabilities</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <i class="fas fa-database text-primary-light"></i>
          <span class="text-sm font-medium text-text">Database</span>
        </div>
        <p class="text-xs text-text-dim">CRUD operations on collections</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <i class="fas fa-globe text-accent-light"></i>
          <span class="text-sm font-medium text-text">HTTP</span>
        </div>
        <p class="text-xs text-text-dim">External API requests</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <i class="fas fa-code text-success"></i>
          <span class="text-sm font-medium text-text">Scripts</span>
        </div>
        <p class="text-xs text-text-dim">Execute Lua scripts</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <i class="fas fa-bell text-warning"></i>
          <span class="text-sm font-medium text-text">Notifications</span>
        </div>
        <p class="text-xs text-text-dim">Send alerts and messages</p>
      </div>
    </div>
  </div>

  <!-- Model Options -->
  <div class="mt-6">
    <h3 class="text-sm font-medium text-text-muted mb-3">Supported AI Models</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3">
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <span class="w-2 h-2 rounded-full bg-success"></span>
          <span class="text-sm font-medium text-text">Claude (Anthropic)</span>
        </div>
        <p class="text-xs text-text-dim">claude-opus-4-5, claude-sonnet-4, claude-3-5-haiku</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <span class="w-2 h-2 rounded-full bg-warning"></span>
          <span class="text-sm font-medium text-text">Gemini (Google)</span>
        </div>
        <p class="text-xs text-text-dim">gemini-3-pro, gemini-3-flash</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <span class="w-2 h-2 rounded-full bg-info"></span>
          <span class="text-sm font-medium text-text">GPT (OpenAI)</span>
        </div>
        <p class="text-xs text-text-dim">gpt-4o, gpt-4-turbo, gpt-3.5-turbo</p>
      </div>
      <div class="bg-bg-card/30 border border-border/30 rounded-lg p-3">
        <div class="flex items-center gap-2 mb-1">
          <span class="w-2 h-2 rounded-full bg-accent"></span>
          <span class="text-sm font-medium text-text">Ollama (Local)</span>
        </div>
        <p class="text-xs text-text-dim">llama3, mistral, codellama</p>
      </div>
    </div>
  </div>
</div>
