<% local data = quote.data or quote %>
<div class="flex-1 overflow-y-auto p-6">
  <div class="max-w-5xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <a href="/billing/quotes/<%= quote._key or data._key %>" class="text-text-muted hover:text-white transition-colors inline-flex items-center gap-2 mb-4">
        <i class="fas fa-arrow-left"></i>
        <span>Back to Quote</span>
      </a>
      <h1 class="text-2xl font-bold text-white">Edit Quote <%= data.number %></h1>
    </div>

    <!-- Form -->
    <form hx-put="/billing/quotes/<%= quote._key or data._key %>" hx-swap="none">
      <div class="space-y-6">
        <!-- Contact Selection -->
        <div class="bg-bg-card/40 backdrop-blur-sm border border-white/5 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Customer</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Contact <span class="text-error">*</span></label>
              <select name="contact_key" required
                      class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white focus:outline-none focus:border-primary">
                <option value="">Select a contact...</option>
                <% for _, c in ipairs(contacts) do %>
                  <option value="<%= c._key or c.data._key %>" <%= data.contact_key == (c._key or c.data._key) and 'selected' or '' %>>
                    <%= c:display_name() %>
                  </option>
                <% end %>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Currency</label>
              <select name="currency" class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white focus:outline-none focus:border-primary">
                <option value="EUR" <%= data.currency == 'EUR' and 'selected' or '' %>>EUR - Euro</option>
                <option value="USD" <%= data.currency == 'USD' and 'selected' or '' %>>USD - US Dollar</option>
                <option value="GBP" <%= data.currency == 'GBP' and 'selected' or '' %>>GBP - British Pound</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Quote Details -->
        <div class="bg-bg-card/40 backdrop-blur-sm border border-white/5 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Details</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Subject</label>
              <input type="text" name="subject" value="<%= data.subject or '' %>"
                     class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white placeholder-text-muted focus:outline-none focus:border-primary"
                     placeholder="Quote subject">
            </div>
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Introduction</label>
              <textarea name="introduction" rows="3"
                        class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white placeholder-text-muted focus:outline-none focus:border-primary resize-none"
                        placeholder="Introduction text for the quote"><%= data.introduction or '' %></textarea>
            </div>
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Valid Until</label>
              <input type="date" name="valid_until" value="<%= data.valid_until and os.date('%Y-%m-%d', data.valid_until) or '' %>"
                     class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white focus:outline-none focus:border-primary">
            </div>
          </div>
        </div>

        <!-- Line Items -->
        <div>
          <h3 class="text-lg font-semibold text-white mb-4">Line Items</h3>
          <%- partial("billing/line_items", { line_items = data.line_items or {}, settings = settings, subtotal = data.subtotal, total_tax = data.total_tax, total = data.total }) %>
        </div>

        <!-- Notes -->
        <div class="bg-bg-card/40 backdrop-blur-sm border border-white/5 rounded-xl p-6">
          <h3 class="text-lg font-semibold text-white mb-4">Additional Information</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Notes</label>
              <textarea name="notes" rows="3"
                        class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white placeholder-text-muted focus:outline-none focus:border-primary resize-none"
                        placeholder="Internal notes (not shown on quote)"><%= data.notes or '' %></textarea>
            </div>
            <div>
              <label class="block text-sm font-medium text-text-muted mb-2">Terms & Conditions</label>
              <textarea name="terms" rows="3"
                        class="w-full px-4 py-2 bg-bg-dark/50 border border-white/10 rounded-lg text-white placeholder-text-muted focus:outline-none focus:border-primary resize-none"
                        placeholder="Terms and conditions (shown on quote)"><%= data.terms or '' %></textarea>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-end gap-4">
          <a href="/billing/quotes/<%= quote._key or data._key %>" class="px-4 py-2 text-text-muted hover:text-white transition-colors">Cancel</a>
          <button type="submit" class="px-6 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg transition-colors">
            Save Changes
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
