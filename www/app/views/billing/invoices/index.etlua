<div class="flex flex-col h-full text-slate-200 font-sans">
  <!-- Header -->
  <header class="flex items-center justify-between px-8 py-6 border-b border-white/5 bg-gray-900/50 backdrop-blur-md sticky top-0 z-10">
    <div>
      <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-400 via-indigo-400 to-purple-400 bg-clip-text text-transparent">Invoices</h1>
      <p class="text-sm text-slate-400 mt-1">Manage and track your invoices</p>
    </div>
    <a href="/billing/invoices/new" class="flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-semibold rounded-lg shadow-lg shadow-indigo-500/20 transition-all duration-200 group">
      <i class="fas fa-plus group-hover:rotate-90 transition-transform duration-300"></i>
      <span>New Invoice</span>
    </a>
  </header>

  <!-- Main Content -->
  <main class="flex-1 overflow-y-auto p-8 custom-scrollbar">
    <div class="max-w-7xl mx-auto">
      
      <!-- Filters & Search -->
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 mb-8">
        <!-- Status Tabs -->
        <div class="flex items-center p-1 bg-slate-800/40 border border-slate-700/50 rounded-xl overflow-x-auto custom-scrollbar max-w-full">
          <% local function status_link(name, key, active_key, count)
              local is_active = (key == active_key)
              local base_classes = "px-4 py-1.5 rounded-lg text-xs font-medium transition-all whitespace-nowrap flex items-center gap-2"
              local active_classes = "bg-indigo-500/20 text-indigo-300 shadow-[0_0_10px_rgba(99,102,241,0.15)] ring-1 ring-indigo-500/50"
              local inactive_classes = "text-slate-400 hover:text-slate-200 hover:bg-white/5"
              local href = "/billing/invoices" .. (key ~= "" and ("?status=" .. key) or "")
             return string.format('<a href="%s" class="%s %s">%s <span class="%s">%s</span></a>', 
                href, base_classes, is_active and active_classes or inactive_classes, name, 
                is_active and "bg-indigo-500 text-white px-1.5 py-0.5 rounded ml-1 text-[10px]" or "bg-slate-700/50 text-slate-400 px-1.5 py-0.5 rounded ml-1 text-[10px]", 
                count or 0)
             end
          %>
          <%- status_link("All", "", status, counts.total) %>
          <%- status_link("Draft", "draft", status, counts.draft) %>
          <%- status_link("Sent", "sent", status, counts.sent) %>
          <%- status_link("Partially Paid", "partially_paid", status, counts.partially_paid) %>
          <%- status_link("Paid", "paid", status, counts.paid) %>
          <%- status_link("Overdue", "overdue", status, counts.overdue) %>
        </div>

        <!-- Search -->
        <div class="relative w-full md:w-64">
           <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-500 text-xs"></i>
           <input type="text" placeholder="Search invoices..." 
                  class="w-full bg-slate-800/40 border border-slate-700/50 rounded-xl pl-9 pr-4 py-2 text-sm text-slate-200 focus:outline-none focus:ring-2 focus:ring-indigo-500/50 focus:border-indigo-500/50 transition-all placeholder:text-slate-600">
        </div>
      </div>

      <!-- Invoices Table -->
      <div class="bg-slate-800/40 border border-slate-700/50 rounded-2xl overflow-hidden backdrop-blur-sm shadow-xl shadow-black/20">
        <% if #invoices == 0 then %>
          <div class="flex flex-col items-center justify-center py-20 text-center">
            <div class="w-20 h-20 bg-slate-800/50 rounded-full flex items-center justify-center mb-4 border border-slate-700/50">
               <i class="fas fa-file-invoice text-3xl text-slate-600"></i>
            </div>
            <h3 class="text-lg font-medium text-white mb-2">No invoices found</h3>
            <p class="text-slate-400 text-sm max-w-xs mx-auto mb-6">There are no invoices matching your current filters.</p>
            <a href="/billing/invoices/new" class="px-4 py-2 bg-indigo-500/10 text-indigo-400 hover:bg-indigo-500/20 border border-indigo-500/20 rounded-lg text-sm font-medium transition-all">
               Create First Invoice
            </a>
          </div>
        <% else %>
          <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
              <thead>
                <tr class="border-b border-slate-700/50 bg-slate-800/40 text-xs uppercase tracking-wider text-slate-400 font-medium">
                  <th class="pl-6 py-4">Number</th>
                  <th class="px-4 py-4">Contact</th>
                  <th class="px-4 py-4">Date</th>
                  <th class="px-4 py-4">Due Date</th>
                  <th class="px-4 py-4 text-right">Total</th>
                  <th class="px-4 py-4 text-right">Balance</th>
                  <th class="px-4 py-4 text-center">Status</th>
                  <th class="pr-6 py-4 text-center">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-700/50 text-sm">
                <% for _, invoice in ipairs(invoices) do %>
                  <% local idata = invoice.data or invoice %>
                  <tr class="group hover:bg-indigo-500/5 transition-colors duration-200">
                    <td class="pl-6 py-4">
                      <a href="/billing/invoices/<%= invoice._key or idata._key %>" class="font-bold text-white group-hover:text-indigo-400 transition-colors">
                        <%= idata.number %>
                      </a>
                    </td>
                    <td class="px-4 py-4 text-slate-300">
                       <% local contact = invoice:get_contact() %>
                       <div class="flex items-center gap-2">
                         <div class="w-6 h-6 rounded-full bg-slate-700/50 flex items-center justify-center text-[10px] text-slate-400">
                            <i class="fas fa-user"></i>
                         </div>
                         <%= contact and contact:display_name() or '-' %>
                       </div>
                    </td>
                    <td class="px-4 py-4 text-slate-400 text-xs"><%= invoice:formatted_date() %></td>
                    <td class="px-4 py-4 text-xs font-medium">
                       <span class="<%= invoice:is_overdue() and 'text-rose-400' or 'text-slate-400' %>">
                         <%= invoice:formatted_due_date() %>
                         <% if invoice:is_overdue() then %> <i class="fas fa-exclamation-circle ml-1"></i> <% end %>
                       </span>
                    </td>
                    <td class="px-4 py-4 text-right font-medium text-white">
                       <%= string.format("€ %.2f", idata.total or 0) %>
                    </td>
                    <td class="px-4 py-4 text-right font-medium <%= (idata.balance_due or 0) > 0 and 'text-amber-400' or 'text-emerald-400' %>">
                       <%= string.format("€ %.2f", idata.balance_due or 0) %>
                    </td>
                    <td class="px-4 py-4 text-center">
                       <% local st = idata.status %>
                       <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                          <%= st == 'paid' and 'bg-emerald-500/10 text-emerald-400 border border-emerald-500/20' 
                          or st == 'overdue' and 'bg-rose-500/10 text-rose-400 border border-rose-500/20'
                          or st == 'partially_paid' and 'bg-amber-500/10 text-amber-400 border border-amber-500/20'
                          or st == 'sent' and 'bg-sky-500/10 text-sky-400 border border-sky-500/20'
                          or 'bg-slate-700/50 text-slate-400 border border-slate-600/50' %>">
                          <span class="w-1.5 h-1.5 rounded-full mr-1.5
                            <%= st == 'paid' and 'bg-emerald-500' 
                            or st == 'overdue' and 'bg-rose-500'
                            or st == 'partially_paid' and 'bg-amber-500'
                            or st == 'sent' and 'bg-sky-500'
                            or 'bg-slate-400' %>"></span>
                          <%= st:gsub("_", " ") %>
                       </span>
                    </td>
                    <td class="pr-6 py-4 text-center">
                      <div class="flex items-center justify-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <a href="/billing/invoices/<%= invoice._key or idata._key %>" class="w-8 h-8 rounded-lg bg-slate-700/50 flex items-center justify-center text-slate-300 hover:bg-indigo-500 hover:text-white transition-all" title="View">
                          <i class="fas fa-eye text-xs"></i>
                        </a>
                        <% if st == 'draft' then %>
                          <a href="/billing/invoices/<%= invoice._key or idata._key %>/edit" class="w-8 h-8 rounded-lg bg-slate-700/50 flex items-center justify-center text-slate-300 hover:bg-emerald-500 hover:text-white transition-all" title="Edit">
                            <i class="fas fa-edit text-xs"></i>
                          </a>
                        <% end %>
                        <a href="/billing/invoices/<%= invoice._key or idata._key %>/pdf" target="_blank" class="w-8 h-8 rounded-lg bg-slate-700/50 flex items-center justify-center text-slate-300 hover:bg-rose-500 hover:text-white transition-all" title="Download PDF">
                          <i class="fas fa-file-pdf text-xs"></i>
                        </a>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
      
      <!-- Pagination (Simple Placeholder) -->
      <% if #invoices > 0 then %>
      <div class="flex items-center justify-between mt-6">
         <div class="text-xs text-slate-500">Showing recent invoices</div>
         <div class="flex gap-2">
            <button class="px-3 py-1.5 bg-slate-800/40 border border-slate-700/50 rounded-lg text-slate-400 text-xs hover:bg-slate-800 hover:text-white transition-all disabled:opacity-50" disabled>Previous</button>
            <button class="px-3 py-1.5 bg-slate-800/40 border border-slate-700/50 rounded-lg text-slate-400 text-xs hover:bg-slate-800 hover:text-white transition-all">Next</button>
         </div>
      </div>
      <% end %>

    </div>
  </main>
</div>

<style>
.custom-scrollbar::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}
.custom-scrollbar::-webkit-scrollbar-track {
  background: transparent;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
  background: rgba(148, 163, 184, 0.2); 
  border-radius: 10px;
}
.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: rgba(148, 163, 184, 0.4);
}
</style>
