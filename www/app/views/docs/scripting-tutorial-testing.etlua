    expect(response.status).to_equal(<span class="text-purple-400">400</span>)
    expect(response.body.error).to_contain(<span class="text-green-400">"price"</span>)
  <span class="text-blue-400">end</span>)

  it(<span class="text-green-400">"should reject empty name"</span>, <span class="text-blue-400">function</span>()
