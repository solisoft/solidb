    expect(response.status).to_equal(<span class="text-purple-400">200</span>)
    expect(response.body.product.price).to_equal(<span class="text-purple-400">24.99</span>)
  <span class="text-blue-400">end</span>)

  it(<span class="text-green-400">"should delete a product"</span>, <span class="text-blue-400">function</span>()
    <span class="text-blue-400">local</span> response = http.delete(<span class="text-green-400">"/products/"</span> .. created_id)

    expect(response.status).to_equal(<span class="text-purple-400">200</span>)
    expect(response.body.message).to_contain(<span class="text-green-400">"deleted"</span>)
  <span class="text-blue-400">end</span>)

  it(<span class="text-green-400">"should return 404 for deleted product"</span>, <span class="text-blue-400">function</span>()
    <span class="text-blue-400">local</span> response = http.get(<span class="text-green-400">"/products/"</span> .. created_id)

    expect(response.status).to_equal(<span class="text-purple-400">404</span>)
  <span class="text-blue-400">end</span>)

<span class="text-blue-400">end</span>)</pre>
