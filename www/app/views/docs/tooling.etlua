            <!-- push -->
            <div class="mb-6">
              <h4 class="text-md font-bold text-white mb-2 flex items-center"><span class="bg-emerald-500/20 text-emerald-300 text-xs px-2 py-1 rounded border border-emerald-500/30 mr-2">push</span> Push scripts to server</h4>
              <div class="bg-gray-950 rounded-lg p-4 mb-3 font-mono text-sm overflow-x-auto border border-white/10">
                <code class="text-green-400">solidb scripts push</code>                <span class="text-gray-500"># Push all scripts</span><br>
                <code class="text-green-400">solidb scripts push</code> users.lua      <span class="text-gray-500"># Push single file</span><br>
                <code class="text-green-400">solidb scripts push</code> users/         <span class="text-gray-500"># Push directory</span>
              </div>
            </div>

            <!-- pull -->
            <div class="mb-6">
              <h4 class="text-md font-bold text-white mb-2 flex items-center"><span class="bg-emerald-500/20 text-emerald-300 text-xs px-2 py-1 rounded border border-emerald-500/30 mr-2">pull</span> Pull scripts from server</h4>
              <div class="bg-gray-950 rounded-lg p-4 mb-3 font-mono text-sm overflow-x-auto border border-white/10">
                <code class="text-green-400">solidb scripts pull</code>                <span class="text-gray-500"># Pull all scripts</span><br>
                <code class="text-green-400">solidb scripts pull</code> --force        <span class="text-gray-500"># Overwrite local files</span>
              </div>
            </div>

            <!-- watch -->
            <div class="mb-6">
              <h4 class="text-md font-bold text-white mb-2 flex items-center"><span class="bg-emerald-500/20 text-emerald-300 text-xs px-2 py-1 rounded border border-emerald-500/30 mr-2">watch</span> Auto-sync on file changes</h4>
              <div class="bg-gray-950 rounded-lg p-4 mb-3 font-mono text-sm overflow-x-auto border border-white/10">
                <code class="text-green-400">solidb scripts watch</code>
              </div>
              <p class="text-sm text-gray-400">Watches for file changes and automatically pushes updates to server.</p>
            </div>

            <!-- list, diff, delete -->
            <div class="mb-6">
              <h4 class="text-md font-bold text-white mb-2 flex items-center"><span class="bg-emerald-500/20 text-emerald-300 text-xs px-2 py-1 rounded border border-emerald-500/30 mr-2">list / diff / delete</span> Other commands</h4>
              <div class="bg-gray-950 rounded-lg p-4 mb-3 font-mono text-sm overflow-x-auto border border-white/10">
                <code class="text-green-400">solidb scripts list</code>                <span class="text-gray-500"># List scripts on server</span><br>
                <code class="text-green-400">solidb scripts diff</code>                <span class="text-gray-500"># Show diff between local and server</span><br>
                <code class="text-green-400">solidb scripts delete</code> users/:id    <span class="text-gray-500"># Delete script by API path</span>
