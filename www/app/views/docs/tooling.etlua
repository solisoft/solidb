                    <td class="px-4 py-3 font-mono text-emerald-300">SOLIDB_DATABASE</td>
                    <td class="px-4 py-3">Override target database</td>
                  </tr>
                </tbody>
              </table>
            </div>

            <h3 class="text-lg font-bold text-white mb-4">Example Workflow</h3>
            <div class="bg-gray-950 rounded-xl border border-white/10 overflow-hidden shadow-xl">
              <div class="p-4 font-mono text-sm">
<pre class="text-gray-300"><span class="text-gray-500"># 1. Initialize project</span>
<span class="text-green-400">solidb scripts init</span> --host localhost --port 6745 --db myapp

<span class="text-gray-500"># 2. Authenticate (choose one method)</span>
<span class="text-green-400">solidb scripts login</span> -u admin            <span class="text-gray-500"># Interactive login</span>
<span class="text-cyan-400">echo</span> <span class="text-green-400">"SOLIDB_API_KEY=xxx"</span> > .env       <span class="text-gray-500"># Or use API key</span>

<span class="text-gray-500"># 3. Create a script</span>
<span class="text-cyan-400">cat</span> > users.lua << <span class="text-green-400">'EOF'</span>
<span class="text-gray-500">-- @methods GET, POST</span>
<span class="text-gray-500">-- @description User management</span>
local users = db:collection("users")
if request.method == "GET" then
    return users:find({})
else
    return users:insert(request.body)
end
