                 &nbsp;&nbsp;-H <span class="text-green-300">"Content-Type: application/json"</span> \<br>
                 &nbsp;&nbsp;-d <span class="text-yellow-300">'{
                  <br>&nbsp;&nbsp;&nbsp;&nbsp;"_from": "users/alice",
                  <br>&nbsp;&nbsp;&nbsp;&nbsp;"_to": "users/bob",
                  <br>&nbsp;&nbsp;&nbsp;&nbsp;"type": "friend"
                  <br>&nbsp;&nbsp;}'</span>
              </div>
