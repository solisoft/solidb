        <!-- Graph Queries Section -->
        <section id="graph-queries" class="scroll-mt-24">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
            <span class="w-8 h-8 rounded-full bg-fuchsia-500/20 text-fuchsia-400 flex items-center justify-center text-sm mr-3">4</span>
            AQL Graph Queries
          </h2>

          <div class="space-y-6">
            <!-- Outbound -->
            <div class="bg-gray-800/20 border border-white/5 rounded-2xl overflow-hidden">
               <div class="p-4 border-b border-white/5 flex items-center bg-white/5">
                 <span class="text-fuchsia-400 font-bold mr-2">OUTBOUND</span>
                 <span class="text-gray-400 text-sm">Find who Alice follows</span>
               </div>
               <div class="p-6 bg-gray-950 font-mono text-sm">
                  <span class="text-purple-400">FOR</span> edge <span class="text-purple-400">IN</span> follows<br>
                  &nbsp;&nbsp;<span class="text-purple-400">FILTER</span> edge._from == <span class="text-yellow-300">"users/alice"</span><br>
                  &nbsp;&nbsp;<span class="text-purple-400">RETURN</span> edge
               </div>
            </div>

            <!-- Traversal -->
            <div class="bg-gray-800/20 border border-white/5 rounded-2xl overflow-hidden">
               <div class="p-4 border-b border-white/5 flex items-center bg-white/5">
                 <span class="text-blue-400 font-bold mr-2">TRAVERSAL</span>
                 <span class="text-gray-400 text-sm">Find friends of friends (2-hop)</span>
               </div>
               <div class="p-6 bg-gray-950 font-mono text-sm">
                  <span class="text-purple-400">FOR</span> user <span class="text-purple-400">IN</span> users<br>
                  &nbsp;&nbsp;<span class="text-purple-400">FILTER</span> user._key == <span class="text-yellow-300">"alice"</span><br>
                  &nbsp;&nbsp;<span class="text-purple-400">FOR</span> edge1 <span class="text-purple-400">IN</span> follows<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">FILTER</span> edge1._from == user._id<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">FOR</span> friend <span class="text-purple-400">IN</span> users<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">FILTER</span> friend._id == edge1._to<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">FOR</span> edge2 <span class="text-purple-400">IN</span> follows<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">FILTER</span> edge2._from == friend._id<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">RETURN</span> edge2._to
               </div>
            </div>

             <!-- Shortest Path -->
            <div class="bg-gray-800/20 border border-white/5 rounded-2xl overflow-hidden">
               <div class="p-4 border-b border-white/5 flex items-center bg-white/5">
                 <span class="text-green-400 font-bold mr-2">SHORTEST_PATH</span>
                 <span class="text-gray-400 text-sm">Find connection between Alice and Charlie</span>
               </div>
               <div class="p-6 bg-gray-950 font-mono text-sm">
                  <span class="text-purple-400">FOR</span> v, e <span class="text-purple-400">IN OUTBOUND SHORTEST_PATH</span><br>
                  &nbsp;&nbsp;<span class="text-yellow-300">"users/alice"</span> <span class="text-purple-400">TO</span> <span class="text-yellow-300">"users/charlie"</span><br>
                  &nbsp;&nbsp;<span class="text-purple-400">GRAPH</span> <span class="text-yellow-300">"social"</span><br>
                  &nbsp;&nbsp;<span class="text-purple-400">RETURN</span> { vertex: v, edge: e }
               </div>
            </div>
