    <section id="local-queries" class="scroll-mt-24">
      <div class="bg-gray-900/40 backdrop-blur-sm border border-white/10 rounded-2xl p-8">
        <div class="flex items-center mb-6">
          <div class="flex items-center justify-center w-10 h-10 rounded-full bg-violet-500 text-white font-bold text-lg mr-4 shadow-[0_0_15px_rgba(139,92,246,0.5)]">
